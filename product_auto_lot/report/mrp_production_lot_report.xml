       <record id="action_report_mrp_lot_code_sheet" model="ir.actions.report">
            <field name="name">Lot Codes</field>
            <field name="model">mrp.production</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">product_auto_lot.report_mrp_lot_code_sheet</field>
            <field name="report_file">product_auto_lot.report_mrp_lot_code_sheet</field>
            <field name="print_report_name">('Lot Codes - %s' % (object.name))</field>
            <field name="binding_model_id" ref="mrp.model_mrp_production"/>
            <field name="binding_type">report</field>
            <!-- <field name="paperformat_id">l10n_us_paper.paperformat_us_landscape</field> -->
        </record>
        
             
       
            
    </data>
</odoo>