<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_mrp_lot_code_sheet">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <t t-foreach="o.move_finished_ids" t-as="move_finished">
                        <t t-foreach="move_finished.move_line_ids.mapped('lot_id')" t-as="move_lot_id">

                            <div class="page">
                            <!--<div class="oe_structure"/>-->
                            <div class="row">
                                <div class="row">
                                    <div class="col-xs-12 mt32" style="text-align: center;">
                                        <table class="table table-condensed"><thead><th> </th></thead></table>
                                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_lot_id.name, 600, 100)" style="width:300px;height:70px"/>
                                        <p class="text-center" t-field="move_lot_id.name"></p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 mt32" style="text-align:center;">
                                        <h1 style="font-size: 50pt">
                                            <span t-field="move_lot_id.name"/>
                                        </h1>
                                        <h3>
                                            <span t-field="move_finished.product_id.name"/>
                                        </h3>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <ul style="list-style-type: none; float:right">
                                        <li>
                                            Date of Manufacture: <span t-esc="move_lot_id.create_date" />
                                        </li>
                                        <t t-if="move_lot_id.use_date">
                                        <li>
                                            <strong>Best Before: <span t-esc="move_lot_id.use_date" /></strong>
                                        </li>
                                        </t>
                                        <t t-if="move_finished.product_id.default_code">
                                        <li>
                                            Product Code: <span t-field="move_finished.product_id.default_code"/>
                                        </li>
                                        </t>
                                        <!--<li>-->
                                            <!--Supplier: <span t-field="o.partner_id.name" />-->
                                        <!--</li>-->
                                        <li>
                                            Printed by: <span t-esc="user.name"/>
                                        </li>
                                        <li>
                                            Date Printed: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
                                        </li>
                                    </ul>
                                </div>

                            </div>

                        </div>
                        </t>
                    </t>

                </t>
            </t>
        </template>

