<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_variant_easy_edit_view_lot_code" model="ir.ui.view">
            <field name="name">product.product.view.form.lot_code</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view" />
            <field name="arch" type="xml">
                <field name="default_code" position="after">
                    <field name="lot_abbv" />
                </field>
            </field>
        </record>
        <record id="product_normal_form_view_lot_code" model="ir.ui.view">
            <field name="name">product.product.view.normal.form.lot_code</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <field name="default_code" position="after">
                    <field name="lot_abbv" />
                    <field name="pallet_abbv" />
                </field>
            </field>
        </record>

        <record id="product_template_only_form_view_lot_code" model="ir.ui.view">
                <field name="name">product.template.product.form.lot_code</field>
                <field name="model">product.template</field>
                <!--<field name="mode">primary</field>-->
                <field name="priority" eval="8" />
                <field name="inherit_id" ref="product.product_template_only_form_view"/>
                <field name="arch" type="xml">
                    <field name="default_code" position="after">
                        <field name="lot_abbv" />
                        <field name="pallet_abbv" />
                    </field>
                </field>
        </record>
    </data>
</odoo>