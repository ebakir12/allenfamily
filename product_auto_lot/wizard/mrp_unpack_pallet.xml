        <record id="action_view_unpack_package_wizard" model="ir.actions.server">
	        <field name="name">Unpack</field>
	        <field name="model_id" ref="product_auto_lot.model_mrp_workcenter_pallet_unpack_wizard"/>
	        <field name="binding_model_id" ref="stock.model_stock_quant_package"/>
	        <field name='groups_id' eval="[(4, ref('base.group_no_one'))]"/>
	        <!-- <field name="context">{'default_production_id': active_id}</field> -->
	        <field name="binding_view_types">form</field>
	        <field name="state">code</field>
	        <field name="code">
	            if records:
	                action = records.action_view_unpack_package_wizard()
	        </field>
	    </record>

    </data>
</odoo>