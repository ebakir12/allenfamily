<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_unpack_package_wizard" model="ir.ui.view">
            <field name="name">mrp.workcenter.pallet.unpack.wizard</field>
            <field name="model">mrp.workcenter.pallet.unpack.wizard</field>
            <field name="arch" type="xml">
                <form string="Unpack Pallets">
                    <group>
                        <p>
                            This will unpack the selected packages contents into the package's locations.
                        </p>
                    </group>
                    <footer>
                        <button string="Unpack" name="unpack_packages" type="object" class="btn-primary o_action_and_close" />

                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

