<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_pack_pallet_code_wizard" model="ir.ui.view">
            <field name="name">mrp.workcenter.pallet.pack.wizard</field>
            <field name="model">mrp.workcenter.pallet.pack.wizard</field>
            <field name="arch" type="xml">
                <form string="Pack Pallets">
                    <field name="warehouse_id" invisible="1" />
                    <field name="warehouse_code" invisible="1" />
                    <field name="production_id" invisible="1"/>
                    <field name="location_source_id" invisible="1"/>
                    <field name="print_only" invisible="1" />
                    <field name="nothing_to_print" invisible="1" />
                    <field name="manu_packing_type_id" invisible="1" />
                    <field name="no_palletizing_pickings" invisible="1" />

                    <group attrs="{'invisible': [('print_only','=', True)]}">
                        <group>
                            <field name="product_qty_per_pallet" />
                            <field name="date_backdating" />
                        </group>
                        <group>
                            <field name="number_of_pallets" />
                            <field name="location_src_id" attrs="{'invisible': [('no_palletizing_pickings', '=', False)]}"  />
                            <field name="location_dest_id" attrs="{'invisible': [('no_palletizing_pickings', '=', False)], 'required': [('no_palletizing_pickings', '=', True)]}" />
                        </group>
                        <div colspan="4" attrs="{'invisible': [('no_palletizing_pickings', '=', False)]}">
                            <p>
                                Palletizing pickings are missing and will be created and validated. Please set a
                                Destination Location where the packages should be moved.

                            </p>
                            <p>
                                The Source Location is where the goods have been moved by the Manufacturing Order.
                            </p>
                        </div>
                    </group>
                    <field name="lot_ids" options="{'no_create': True}"  attrs="{'invisible': [('print_only','=', True)], 'required': [('print_only','=', False)]}" context="{'default_location_id': parent.location_source_id }" widget="many2many" readonly="True" >
                        <tree>
                            <field name="name" />
                            <field name="quantity_context" context="{'default_location_id': parent.location_source_id }" />
                            <field name="quantity_tentatively_packed" context="{'default_location_id': parent.location_source_id }" />
                            <field name="quantity_to_pack" context="{'default_location_id': parent.location_source_id }" />
                        </tree>
                    </field>
                    <field name="picking_ids" invisible="1"/>
                    <group>
                        <group>
                            <field name="page_from" />
                        </group>
                        <group>
                            <field name="page_to" />
                        </group>
                    </group>
                    <group attrs="{'invisible': [('print_only','=', True)]}">

                        <p>
                            Pack will automatically pack the finished goods into the pallets, and move the packages into stock.
                        </p>
                    </group>
                    <group attrs="{'invisible': [('print_only','=', False)]}">
                        <p>
                            Use the Reprint button to print all pallet codes associated with this Manufacturing Order.
                        </p>
                    </group>

                    <footer>
                        <button string="Pack" name="action_pack" type="object" class="btn-primary o_action_and_close" attrs="{'invisible': [('print_only','=', True)]}" />
                        <button string="Reprint" name="action_print" type="object" class="btn-primary o_action_and_close" />
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>

               </form>
            </field>
        </record>

