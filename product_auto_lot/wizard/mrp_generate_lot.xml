<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Register payment from several invoices -->
        <record id="view_generate_lot_code_wizard" model="ir.ui.view">
            <field name="name">mrp.workcenter.lot.wizard</field>
            <field name="model">mrp.workcenter.lot.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Lot Code">
                    <field name="workorder_id" invisible="1"/>
                    <p>
                        This product's lot code format requires an additional variable.
                    </p>
                    <group>
                        <group>
                            <field name="lot_name" readonly="1" />
                            <field name="gen_date" />
                            <field name="user_defined" />
                            <field name="description" />
                        </group>
                        <group>

                        </group>
                    </group>
                    <group>
                        <p>
                            This variable could refer to the machine or rack number. Refer to a supervisor or company procedure manual if you are unsure what to enter here.
                        </p>
                        <p>
                            After entering a variable, click Generate Current Lot Code.
                        </p>
                    </group>
                    <footer>
                        <button string="Generate New Lot Code" name="save_lot_code" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

