<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Register payment from several invoices -->
        <record id="view_generate_pallet_code_wizard" model="ir.ui.view">
            <field name="name">mrp.workcenter.pallet.wizard</field>
            <field name="model">mrp.workcenter.pallet.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Lot Code">
                    <field name="warehouse_id" invisible="1" />
                    <field name="warehouse_code" invisible="1" />
                    <field name="production_id" invisible="1"/>
                    <field name="location_source_id" invisible="1"/>
                    <field name="print_only" invisible="1" />
                    <field name="nothing_to_print" invisible="1" />
                    <field name="manu_packing_type_id" invisible="1" />
                    <h2 attrs="{'invisible': [('print_only','=', True)]}">
                        <field name="lot_name" readonly="1" />
                    </h2>
                    <group attrs="{'invisible': [('print_only','=', True)]}">
                        <group>
                            <field name="product_qty_per_pallet" />
                            <field name="gen_date" />
                            <field name="last_pallet_number" />
                        </group>
                        <group>
                            <field name="pallet_start_number" />
                            <field name="number_of_pallets" />
                            <field name="sequence_step" />
                        </group>
                    </group>
                    <group attrs="{'invisible': [('print_only','=', True)]}">
                        <p attrs="{'invisible': [('hide_user_defined','=', True)]}">
                            This product's lot code format requires an additional variable.
                        </p>
                    </group>
                    <group attrs="{'invisible': [('print_only','=', True)]}">
                        <group>
                            <field name="hide_user_defined" invisible="1"/>
                            <field name="user_defined" attrs="{'invisible': [('hide_user_defined','=', True)], 'required': [('hide_user_defined','=', False), ('print_only','=', False)]}" />
                        </group>
                        <group>
                            <i>
                                <field name="description" attrs="{'invisible': [('hide_user_defined','=', True)]}" nolabel="1" />
                            </i>
                        </group>
                    </group>
                    <field name="picking_ids" invisible="1"/>
                    <group>
                        <group>
                            <field name="page_from" />
                        </group>
                        <group>
                            <field name="page_to" />
                        </group>
                    </group>
                    <group attrs="{'invisible': [('print_only','=', True)]}">
                        <p>
                            Create and Print will create the packages and print out the codes.
                        </p>
                    </group>
                    <group attrs="{'invisible': [('print_only','=', False)]}">
                        <p>
                            Use the print button to print all pallet codes associated with this Manufacturing Order.
                        </p>
                    </group>
                    <group>
                        <group>
                            <field name="paper_size" widget="radio" options="{'horizontal': true}"/>
                        </group>
                        <group></group>
                    </group>
                    <footer>
                        <button string="Create and Print" name="action_generate_and_print" type="object" class="btn-primary o_action_and_close" attrs="{'invisible': [('print_only','=', True)]}" />
                        <button string="Print" name="action_print" type="object" class="btn-primary o_action_and_close" />
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

