            name="Generate Pallet Lot Code"
            context="{'default_production_id': active_id}"
            res_model="mrp.workcenter.pallet.wizard"
            src_model="mrp.production"
            target="new"	
            groups="base.group_no_one"
            id="action_view_generate_pallet_code_wizard"/> -->
            
            
	    <record id="action_view_generate_pallet_code_wizard" model="ir.actions.act_window">
	        <field name="name">Generate Pallet Lot Code</field>
	        <field name="res_model">mrp.workcenter.pallet.wizard</field>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="view_generate_pallet_code_wizard"/>
	        <field name="binding_model_id" ref="mrp.model_mrp_production"/>
	        <field name='groups_id' eval="[(4, ref('base.group_no_one'))]"/>
	        <field name="binding_view_types">form</field>
	        <field name="context">{'default_production_id': active_id}</field>
	        <field name="target">new</field>
        </record>
    
	    
	    
    </data>
</odoo>