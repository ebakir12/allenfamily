<odoo>
    <data>
        <!-- Warehouse -->
        <record id="view_warehouse_mrp_palletize" model="ir.ui.view">
            <field name="name">Stock Warehouse Palletize</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="mrp.view_warehouse_inherit_mrp"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='manufacture_to_resupply']" position="after">
                    <field name="manufacture_and_pack"
                           attrs='{"invisible": [["manufacture_to_resupply", "=", False]]}'
                    />
                </xpath>
                <xpath expr="//field[@name='manu_type_id']" position="after">
                    <field name="manu_packing_type_id" readonly="True"
                    />
                </xpath>
            </field>
        </record>

        <record id="view_warehouse_mrp_palletize_location" model="ir.ui.view">
            <field name="name">Stock Warehouse Palletize Location</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='wh_output_stock_loc_id']" position="after">
                    <field name="wh_mrp_pack_stock_loc_id" readonly="True"
                           attrs='{"invisible": [["manufacture_to_resupply", "=", False]]}'
                    />
                </xpath>
            </field>
        </record>

    </data>
</odoo>