<odoo>

    <!-- Production -->
    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="name">mrp.production</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <button name="button_mark_done" position="after">
                <button name="action_import_packages" class="btn-primary" string="Import Packages" type="object" attrs="{'invisible': [('state', 'not in', ['confirmed', 'progress'])]}"/>
            </button>
            <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='product_id']" position="after">
                <field name="workcenter_name" />
            </xpath>
        </field>
    </record>

