<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Register payment from several invoices -->
        <record id="view_import_package_wizard" model="ir.ui.view">
            <field name="name">mrp.import.packages.wizard</field>
            <field name="model">mrp.import.packages.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Packages">
                    <field name="production_id" invisible="1"/>
                    <p>
                        This product's lot code format requires an additional variable.
                    </p>
                    <group>
                        <group>
                            <field name="lot_code" readonly="1" />
<!--                            <field name="gen_date" />-->
                            <field name="user_defined" />
                            <field name="description" />
                        </group>
                        <group>
                        </group>
                    </group>
                    <group>
                        <p>
                            This variable could refer to the machine or rack number. Refer to a supervisor or company procedure manual if you are unsure what to enter here.
                        </p>
                        <p>
                            After entering a variable, click Import Packages.
                        </p>
                    </group>
                    <footer>
                        <button string="Import Packages" name="action_import_packages" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

 <!--        <act_window
            name="Import Packages"
            context="{'default_production_id': active_id}"
            res_model="mrp.import.packages.wizard"
            src_model="mrp.production"
            view_mode="form"
            target="new"
            groups="base.group_no_one"
            id="action_view_import_package_wizard"/> -->
            
            
     <record id="action_view_import_package_wizard" model="ir.actions.act_window">
        <field name="name">Import Packages</field>
        <field name="res_model">mrp.import.packages.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_import_package_wizard"/>
        <field name="binding_model_id" ref="mrp.model_mrp_production"/>
        <field name='groups_id' eval="[(4, ref('base.group_no_one'))]"/>
        <field name="binding_view_types">form</field>
        <field name="context">{'default_production_id': active_id}</field>
        <field name="target">new</field>
    </record>
    

    </data>
</odoo>